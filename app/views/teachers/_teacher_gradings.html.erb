<div class="card">
  <div class="card-header d-flex align-items-center justify-content-between">
    Gradings

    <a data-toggle="collapse" href="#teacher_gradings_new_form">
      Add grading
    </a>
  </div>

  <ul class="list-group list-group-flush">
    <% @teacher.gradings.each do |grading| %>
      <li class="list-group-item d-flex align-items-center justify-content-between">
        <%= link_to grading, grading %>

      </li>
    <% end %>

    <div class="card-footer">
      <div class="collapse" id="teacher_gradings_new_form">
        <%= render partial: "teachers/teacher_gradings_new_form" %>
      </div>
    </div>

  </ul>
</div>

<%= form_with(model: @grading, local: true) do |f| %>

  <%= f.hidden_field :teacher_id, value: @teacher.id %>

  <div class="form-group">
    <%= f.label :submission_id %>

    <%= f.collection_select :submission_id, Submission.all, :id, :to_s, {}, class: "form-control" %>
  </div>

  <div class="form-group">
    <%= f.label :marked_work %>

    <%= f.file_field :marked_work, class: "form-control" %>
  </div>

  <div class="form-group">
    <%= f.label :grade %>

    <%= f.text_field :grade, class: "form-control" %>
  </div>

  <div class="form-group">
    <%= f.label :feedback %>
    <%= f.text_area :feedback, rows: "3", class: "form-control" %>
  </div>

  <%= f.submit "Create grading", class: "btn btn-block btn-outline-secondary" %>
<% end %>

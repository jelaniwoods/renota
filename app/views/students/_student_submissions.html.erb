<div class="card">
  <div class="card-header d-flex align-items-center justify-content-between">
    Submissions

    <a data-toggle="collapse" href="#student_submissions_new_form">
      Add submission
    </a>
  </div>

  <ul class="list-group list-group-flush">
    <% @student.submissions.each do |submission| %>
      <li class="list-group-item d-flex align-items-center justify-content-between">
        <%= link_to submission, submission %>

      </li>
    <% end %>

    <div class="card-footer">
      <div class="collapse" id="student_submissions_new_form">
        <%= render partial: "students/student_submissions_new_form" %>
      </div>
    </div>

  </ul>
</div>

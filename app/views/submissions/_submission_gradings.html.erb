<div class="card">
  <div class="card-header d-flex align-items-center justify-content-between">
    Gradings

    <a data-toggle="collapse" href="#submission_gradings_new_form">
      Add grading
    </a>
  </div>

  <ul class="list-group list-group-flush">
    <% @submission.gradings.each do |grading| %>
      <li class="list-group-item d-flex align-items-center justify-content-between">
        <%= link_to grading, grading %>

        <% if current_teacher == grading.teacher %>
          <%= link_to grading, method: :delete do %>
            <i class="fas fa-trash-alt"></i>
          <% end %>
        <% end %>

      </li>
    <% end %>

    <div class="card-footer">
      <div class="collapse" id="submission_gradings_new_form">
        <%= render partial: "submissions/submission_gradings_new_form" %>
      </div>
    </div>

  </ul>
</div>
